{
  "basePath": "/",
  "swagger": "2.0",
  "info": {
    "title": "Lectern",
    "version": "1.0.0"
  },
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/dictionaries": {
      "get": {
        "summary": "Get dictionaries stored in lectern",
        "description": "Returns list of dictionaries",
        "parameters": [
          {
            "name": "name",
            "description": "name of dictionary",
            "type": "string",
            "in": "query",
            "required": false
          },
          {
            "name": "version",
            "description": "version of dictionary",
            "type": "string",
            "in": "query",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/DictionaryListResponse"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "tags": [
          "Dictionaries"
        ]
      },
      "post": {
        "summary": "Create a new dictionary in lectern",
        "description": "Saves the provided dictionary in lectern. Must not conflict with a previous dictionary name and version business key",
        "parameters": [
          {
            "name": "Dictionary",
            "in": "body",
            "description": "The dictionary to be saved",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateDictionary"
            }
          }
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Dictionary"
            }
          }
        },
        "tags": [
          "Dictionaries"
        ]
      }
    },
    "/dictionaries/{_id}": {
      "get": {
        "summary": "Get a single dictionary",
        "description": "Get single dictionary stored in lectern by mongo id",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Dictionary"
            }
          }
        },
        "tags": [
          "Dictionaries"
        ]
      }
    },
    "/dictionaries/{_id}/schemas": {
      "post": {
        "summary": "Update a dictionary by adding a new file schema",
        "description": "Update a dictionary to the next major version number by adding a new file schema that passes validation against the meta schema. ",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "file schema",
            "in": "body",
            "description": "file schema",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Dictionary"
            }
          }
        },
        "tags": [
          "Dictionaries"
        ]
      },
      "put": {
        "summary": "Update an existing file schema that exists in a dictionary",
        "description": "Updates an existing file schema in a dictionary and updates the version",
        "parameters": [
          {
            "name": "_id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "majorVersion",
            "in": "query",
            "type": "boolean",
            "required": false
          },
          {
            "name": "file schema",
            "in": "body",
            "description": "file schema",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "security": [
          {
            "Bearer": []
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "schema": {
              "$ref": "#/definitions/Dictionary"
            }
          }
        },
        "tags": [
          "Dictionaries"
        ]
      }
    },
    "/diff": {
      "get": {
        "summary": "Compare differences between dictionaries",
        "description": "Computes the difference between dictionaries at the field level",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "type": "string",
            "required": true
          },
          {
            "name": "left",
            "in": "query",
            "type": "string",
            "required": true
          },
          {
            "name": "right",
            "in": "query",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "The computed diff",
            "schema": {
              "$ref": "#/definitions/DiffResponse"
            }
          }
        },
        "tags": [
          "Dictionaries"
        ]
      }
    }
  },
